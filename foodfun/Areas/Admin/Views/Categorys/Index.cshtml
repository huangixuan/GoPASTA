<body>

    <div class="content">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">

                            @Html.ActionLink("新增記錄", "Create", "Categorys", null, new { @class = "btn btn-primary" })
                            @*<strong class="card-title">Data Table</strong>*@
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <td> @Html.DisplayNameFor(model => model.rowid)</td>
                                        <td> @Html.DisplayNameFor(model => model.parentid)</td>
                                        <td> @Html.DisplayNameFor(model => model.category_no)</td>
                                        <td> @Html.DisplayNameFor(model => model.category_name)</td>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.rowid)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.parentid)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.category_no)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.category_name)
                                            </td>
                                            <td>

                                                @Html.ActionLink("修改", "Edit", "Categorys", new { id = item.rowid }, new { @class = "btn btn-info" })

                                                @Html.ActionLink("刪除", "Delete", "Categorys", new { id = item.category_no }, new { @class = "btn btn-success", onclick = "return confirm('是否確定要刪除?')" })
                                            </td>
                                        </tr>
                                    }



                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </div>
        </div><!-- .animated -->
    </div><!-- .content -->


    <div class="clearfix"></div>
   

