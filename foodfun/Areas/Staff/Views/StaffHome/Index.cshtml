@model foodfun.Models.MemberOrderViewModel
@using foodfun.Models;

@{
    ViewBag.Title = "產品列表";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<Categorys> categorys = new List<Categorys>();

    categorys = Shop.GetCategarysIsSale();

}


<style>
    .popular-items .order_box .order-list label {
        width: 100px;
    }
</style>

<section class="popular-items latest-padding">
    <div class="container-fluid">
        <div class="row">

            @*=========分類列表=========*@
            <div class="col-md-8 ">
                <div class="row product-btn justify-content-between mb-40">
                    <div class="properties__button">
                        <!--Nav Button  -->
                        <nav>
                            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                <a class="nav-item nav-link btn-danger mx-2" id="nav-home-tab" href="/Staff/StaffHome/Index/HOT" role="tab" aria-controls="nav-home" aria-selected="true">熱門商品</a>
                                @foreach (var item in categorys)
                                {
                                    <a class="nav-item nav-link bg-danger mx-2" href="/Staff/StaffHome/Index/@item.category_no">@item.category_name</a>
                                }
                            </div>

                        </nav>

                        <!--End Nav Button  -->
                    </div>
                </div>


                @*=========商品==========*@
                <div class="row" id="">


                    @foreach (var item in Model.products)
                    {
                        <!-- card one -->
                    <div class="col-xl-2 col-lg-2 col-md-4 col-6 ">
                        <div class="item-box border mb-3 text-center " data-toggle="modal" data-target="#@item.product_no">
                            <h3 class="h5">
                                @Html.DisplayFor(modelItem => item.product_name)
                            </h3>
                            <span>@Html.DisplayFor(modelItem => item.price_sale)</span>

                        </div>



                        @*=========================*@

                        <div class="modal " id="@item.product_no" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel"> @item.product_name</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">

                                        <div class="pruduct_property">


                                            @{List<SelectListItem> lists = Shop.GetPropertyList(item.product_no);}

                                            @if (lists != null)
                                            {

                                                foreach (var item1 in lists)
                                                {

                                                    <div class="section">
                                                        <span class="col-form-label">@item1.Text   </span>

                                                        <div class="form-check form-check-inline">
                                                            @{
                                                                List<string> prop_values = Shop.GetProductPropertyValue(item1.Value).Split('/').ToList();
                                                                foreach (var value in prop_values)
                                                                {
                                                                    @Html.RadioButton(@item1.Value, @value, new { @class = "form-check-input" })
                                                                    @Html.Label(item1.Value, @value, new { @class = "form-check-label" })

                                                                }
                                                            }
                                                        </div>
                                                    </div>
                                                }
                                            }
                                        </div>

                                        <select class="qty-select">
                                            @for (int i = 1; i <= item.stock_qty; i++)
                                            {

                                            }
                                            <option value="1">One</option>
                                            <option value="2">Two</option>
                                            <option value="3">Three</option>
                                        </select>

                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                                        <button type="button" class="btn btn-primary">確定</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*======================*@


                    </div>
                    }

                </div>



                @*=========商品 end==========*@

            </div>

            @*=========訂單==========*@
            <div class="col-md-4">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="order_box">
                        <div class="row">
                            <div class=" btn-group-toggle mx-auto order-list" data-toggle="buttons">
                                @foreach (var item in Model.mealServiceList)
                                {
                                    <label class="btn btn-warning mx-1">
                                        <input type="radio" name="mealService" id=@item.mealservice_no>
                                        @item.mealservice_name
                                    </label>
                                }
                            </div>
                        </div>
                        <div id="orderDetail">
                            @Html.Partial("_PartialOrderBox")
                        </div>

                        <div class="creat_account">
                            <input type="checkbox" id="f-option4" name="selector" />
                            <label for="f-option4">I’ve read and accept the </label>
                            <a href="#">terms & conditions*</a>
                        </div>
                        <a class="btn_3" href="#">Proceed to Paypal</a>
                    </div>
                }









            </div>
        </div>
    </div>


</section>




