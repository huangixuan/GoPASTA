    <div>
        <ul class="list">
            <li>商品<span>小計</span></li>

            @foreach (var item in currentCart.cartItems)
                {


        <li>
            @Shop.GetProductName(item.product_no)
            <span class="middle">x @item.qty</span>
            <span class="last">$@item.each_item_amount</span>

        </li>

                }


           

        </ul>
    </div>
</div>
