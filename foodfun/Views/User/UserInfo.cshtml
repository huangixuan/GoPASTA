@model foodfun.Models.Users

@{
    ViewBag.Title = "UserInfo";
    Layout = "~/Views/Shared/_LayoutLight.cshtml";
}
<script src="~/Scripts/datepicker.js"></script>


                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h2 class="text-center my-4">@ViewBag.Title</h2>


                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.account_name)
                        @Html.HiddenFor(model => model.mno)
                        @Html.HiddenFor(model => model.id)
                        @Html.HiddenFor(model => model.role_no)
                        @Html.HiddenFor(model => model.varify_code)
                        @Html.HiddenFor(model => model.isvarify)

                        <div class="form-group">

                            <div class="col-12">
                                @Html.EditorFor(model => model.mname, new { htmlAttributes = new { @class = "form-control single-input ", @placeholder = "姓名" } })
                                @Html.ValidationMessageFor(model => model.mname, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-12">
                                @Html.EditorFor(model => model.birthday, new { htmlAttributes = new { @class = "form-control single-input  datepicker", @placeholder = "生日" } })
                                @Html.ValidationMessageFor(model => model.birthday, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-12">
                                @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control single-input ", @placeholder = "電話" } })
                                @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-12">
                                @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control single-input ", @placeholder = "地址" } })
                                @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-12">
                                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control single-input " } })
                                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                            </div>
                        </div>



                        <div class="form-group text-center">
                            <div class="col-12 ">
                                <input type="submit" value="確認" class="btn btn-outline-danger btn-block mt-50 " />
                            </div>
                        </div>
                    </div>
                }
