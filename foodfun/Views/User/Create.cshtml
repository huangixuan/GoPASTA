@model foodfun.Models.Users

@{
    ViewBag.Title = "註冊";
    Layout = "~/Views/Shared/_LayoutBox.cshtml";
}

<script src="~/Scripts/datepicker-zh-TW.js"></script>
<script src="~/Scripts/datepicker.js"></script>
<script src="~/Scripts/jquery.twzipcode.min.js"></script>


<section class=" box_part ">

    <div class="container">
        <div class="row align-items-center d-flex justify-content-center">

            <div class=" col-md-8 ">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal ">
                        <h2 class="text-center my-4">@ViewBag.Title</h2>

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.mno)
                        @Html.HiddenFor(model => model.id)
                        @Html.HiddenFor(model => model.role_no)
                        @Html.HiddenFor(model => model.varify_code)
                        @Html.HiddenFor(model => model.isvarify)
                        <div class="form-group  ">

                            <div class=" col-12 ">
                                @Html.EditorFor(model => model.account_name, new { htmlAttributes = new { @class = "form-control single-input ", @placeholder = "帳號" } })
                                @Html.ValidationMessageFor(model => model.account_name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-12">
                                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control single-input ", @placeholder = "密碼" } })
                                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group ">
                            <div class="col-12 ">
                                @Html.EditorFor(model => model.mname, new { htmlAttributes = new { @class = "form-control single-input  ", @placeholder = "姓名" } })
                                @Html.ValidationMessageFor(model => model.mname, "", new { @class = "text-danger" })

                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-12">
                                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control single-input ", @placeholder = "E-mail" } })
                                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-12">
                                @Html.EditorFor(model => model.birthday, new { htmlAttributes = new { @class = "form-control single-input datepicker", @placeholder = "生日" } })
                                @Html.ValidationMessageFor(model => model.birthday, "", new { @class = "text-danger " })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-12">
                                @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control single-input ", @placeholder = "手機號碼" } })
                                @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                            </div>


                        </div>


                        <div class="form-group">
                            <div class="col-12">
                            <div class="row" id="twzipcode">

                                <div class="col-md-6  form-group " data-role="county"></div>
                                <div class="col-md-6  form-group " data-role="district"></div>
                            </div>


                                @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control single-input ", @placeholder = "地址" } })
                                @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-12 ">
                                <input type="submit" value="確認" class="btn btn-outline-danger btn-block mt-50 " />
                            </div>
                        </div>
                    </div>
                }



            </div>
        </div>
    </div>
</section>

<script>

    $('#twzipcode').twzipcode({

        zipcodeIntoDistrict: true, // 郵遞區號自動顯示在地區
        css: [" form-control single-input", " form-control single-input"], // 自訂 "城市"、"地區" class 名稱
        
    });
    $("#twzipcode select").change(function () {
        var add = $("#twzipcode").twzipcode("get", "county") + $("#twzipcode").twzipcode("get", "district")
        $("#address").val(add);
        
    })


</script>
