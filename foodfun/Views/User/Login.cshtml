@model foodfun.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutBox.cshtml";
}

<!--================box_part Area =================-->
<section class=" box_part ">

    <div class="container">
        <div class="row align-items-center d-flex justify-content-center">

            <div class=" col-md-8 mx-auto ">
                <div class="box_part_form ">
                    <div class="box_part_form_iner">
                        <h3>
                            Welcome Back ! <br>
                            Please Sign in now
                        </h3>
                        <div class="login">


                        @using (Html.BeginForm())
                    //@*@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "row contact_form" }))*@
                    {
                        @Html.AntiForgeryToken()


                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-md-12 form-group p_star">
                            @Html.EditorFor(model => model.UserNo, new { htmlAttributes = new { @class = "form-control", @placeholder = "Username" } })
                            @Html.ValidationMessageFor(model => model.UserNo, "", new { @class = "text-danger" })

                        </div>
                        <div class="col-md-12 form-group p_star">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class=" col-md-12 form-group">
                            <div class="creat_account d-flex align-items-center">
                                <input type="checkbox" id="f-option" name="selector">
                                <label for="f-option">Remember me</label>
                            </div>


                            <input type="submit" value="登入" class="btn_3" />
                            <br>
                            @Html.ActionLink("forget password?", "ForgetPassword", "User", null, new { Class = "lost_pass" })
                            @*<a class="lost_pass" href="#">forget password?</a>*@
                             <br>
                            @Html.ActionLink("Create an account!", "Create", "User", null, new { Class = "new_account" })
                            @*<a class="new_account " href="#">Create an account!</a>*@
                            <div class="fb_google">
                                <a href="#"><i class="fab fa-facebook-f text-primary "></i></a>
                                <a href="#"><i class="fab fa-google text-danger "></i></a>
                            </div>

                        </div>
                        
                    }
                            </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================box_part end =================-->



